printStatus(X) :- 
    (
    	printReject(X),
        write('Packet Rejected')
    );
    (   
    	not(printReject(X)),
        printDrop(X),
        write('Packet Dropped')
    );
    (
    	not(printReject(X)),
        not(printDrop(X)),
        printAccept(X),
        write('Packet Accepted')
    ).

printReject(X) :-
    (   
    	src_ip(X,Src_IP),
    	isSrcIPRejected(Src_IP)
    );
    (   
    	dest_ip(X, Dest_IP),
        isDstIPRejected(Dest_IP)
    );
    (   
    	adapter_num(X,Adap),
        isAdapterRejected(Adap)
    );
    (   
    	protocol_type(X,Protocol),
        isProtocolIDRejected(Protocol)
    );
    (   
    	icmpv6_type(X, IC6),
        isICMPV6TypeRejected(IC6)	
    );
    (   
    	icmpv6_msgCode(X,Msg),
        isICMPV6CodeRejected(Msg)	
    );
    ( 
    	vlanId(X,VLAN),					
        isVlanIDRejected(VLAN)			
    );
    (
    
    );
    (   
    
    );
    ( 
    
    );
    (   
    
    );
    (  
    
    ).
/* 
 * isTCPSrcRejected(TCPPortNo)
 * isTCPDstRejected(TCPPortNo)
 * isUDPSrcRejected(UDPPortNo)
 * isUDPDstRejected(UDPPortNo)
 * isIPV6SrcRejected(IPV6SrcAddr)    
 * isIPV6DstRejected(IPV6DstAddr)
 * isICMPTypeRejected(Type)
 * isICMPCodeRejected(Code)
 * */
printDrop(X) :-
    (   
    	src_ip(X,Src_IP),
    	isSrcIPDrop(Src_IP)
    );
    (   
    	dest_ip(X, Dest_IP),
        isDstIPDrop(Dest_IP)
    );
    (   
    	adapter_num(X,Adap),
        isAdapterDrop(Adap)
    );
    (   
    	protocol_type(X,Protocol),
        isProtocolIDDrop(Protocol)
    );
    (   
    	port_num(X,Port),
        isPortNumDrop(Port)			/*Check*/
    );
    (   
    	icmpv6_type(X, IC6),
        isIcmpv6TypeDrop(IC6)		/*Check*/
    );
    (   
    	icmpv6_msgCode(X,Msg),
        isIcmpv6MsgCodeDrop(Msg)	/*Check*/
    );
    (   
    	vlanId(X,VLAN),					
        isVLANDrop(VLAN)			/*Check*/
    ).

printAccepted(X) :-
    (   
    	src_ip(X,Src_IP),
    	isSrcIPAccepted(Src_IP)
    ),
    (   
    	dest_ip(X, Dest_IP),
        isDstIPAccepted(Dest_IP)
    ),
    (   
    	adapter_num(X,Adap),
        isAdapterAccepted(Adap)
    ),
    (   
    	protocol_type(X,Protocol),
        isProtocolIDAccepted(Protocol)
    ),
    (   
    	port_num(X,Port),
        isPortNumAccepted(Port)			/*Check*/
    ),
    (   
    	icmpv6_type(X, IC6),
        isIcmpv6TypeAccepted(IC6)		/*Check*/
    ),
    (   
    	icmpv6_msgCode(X,Msg),
        isIcmpv6MsgCodeAccepted(Msg)	/*Check*/
    ),
    (   
    	vlanId(X,VLAN),					
        isVLANAccepted(VLAN)			/*Check*/
    ).








